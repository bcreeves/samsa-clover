<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cloverappvue.ShowMessageActivity">


  <TextView
      android:id="@+id/show_message_text"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="20sp"
      android:layout_gravity="center"
      android:text="@string/show_message"
      android:padding="10sp"/>

  <Button android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:text="Cash Drawer"
      android:onClick="cashdrawer"/>

  <Button android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:text="Print"
      android:onClick="print"/>

  <Button android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:text="Get Status"
      android:onClick="getStatus"/>



</LinearLayout>